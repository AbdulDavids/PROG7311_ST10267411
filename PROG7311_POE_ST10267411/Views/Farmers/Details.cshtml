@model PROG7311_POE_ST10267411.ViewModels.FarmerDetailsViewModel

@{
    ViewData["Title"] = "Farmer Details";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Farmers</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Farmer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Name:</div>
                        <div class="col-8 fw-bold">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Email:</div>
                        <div class="col-8">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Phone:</div>
                        <div class="col-8">
                            <a href="tel:@Model.Phone">@Model.Phone</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Products:</div>
                        <div class="col-8">
                            <span class="badge bg-success">@Model.ProductCount product@(Model.ProductCount != 1 ? "s" : "")</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-controller="Products" asp-action="FarmerProducts" asp-route-id="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-leaf me-2"></i>View Products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-leaf me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-controller="Products" asp-action="FarmerProducts" asp-route-id="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-clipboard-list me-2"></i>Browse Products
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Farmer List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 