@model PROG7311_POE_ST10267411.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-4" style="--animation-order: 0;">
            <div class="card-header bg-white text-black" style="border-bottom: 1px solid rgba(0,0,0,.1); border-radius: 14px 14px 0 0; padding: 1.5rem;">
                <h2 class="text-center mb-0 fw-bold">@ViewData["Title"]</h2>
            </div>
            <div class="card-body p-4">
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px;"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Email" class="form-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Log in</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center" style="border-radius: 0 0 14px 14px; background-color: transparent;">
                <p class="mb-0">
                    New to Agri-Energy Connect? <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-success fw-bold">Register</a>
                </p>
            </div>
        </div>
        <div class="alert alert-light text-center" style="--animation-order: 1; border-radius: 14px;">
            <p class="mb-0 small">
                <i class="fas fa-info-circle text-success me-1"></i> <strong>Farmer Demo account:</strong> sundar@gmail.com / Password123!

                <br>

                <i class="fas fa-info-circle text-success me-1"></i> <strong>Company Demo account:</strong> elon@gmail.com / Password123!


            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 