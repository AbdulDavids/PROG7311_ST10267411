@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body p-4 text-center">
                <i class="fas fa-exclamation-triangle text-danger" style="font-size: 64px;"></i>
                <h3 class="mt-3">Sorry, you do not have access to this resource.</h3>
                <p class="mb-4">You don't have permission to access this page. Please contact an administrator if you believe this is an error.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div> 