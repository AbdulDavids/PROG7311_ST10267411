@model PROG7311_POE_ST10267411.ViewModels.DashboardStatsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center py-5 mb-5 rounded-4" style="background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(21,128,61,0.1) 100%); --animation-order: 0;">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3" style="background: linear-gradient(90deg, #15803d 0%, #22c55e 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Welcome to Agri-Energy Connect</h1>
                <p class="lead mb-4">Bridging farmers and energy companies for a sustainable future</p>
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-lg px-4 me-md-2">Get Started</a>
                        <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-success btn-lg px-4">Learn More</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Farmer"))
{
    <div class="row g-4">
        <div class="col-md-7" style="--animation-order: 1;">
            <div class="card h-100 border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                            <i class="fas fa-seedling fa-lg"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">Farmer Dashboard</h3>
                            <p class="text-muted mb-0">Manage your products</p>
                        </div>
                    </div>
                    
                    <p class="mb-4">Connect your farm products directly with energy companies looking for sustainable biomass inputs. List your products, set production dates, and get discovered.</p>
                    
                    <div class="d-grid gap-3">
                        <a asp-controller="Products" asp-action="My" class="btn btn-outline-success d-flex align-items-center justify-content-between px-4">
                            <span><i class="fas fa-list me-2"></i>View My Products</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a asp-controller="Products" asp-action="Create" class="btn btn-success d-flex align-items-center justify-content-between px-4">
                            <span><i class="fas fa-plus me-2"></i>Add New Product</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5" style="--animation-order: 2;">
            <div class="card h-100 border-0" style="background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(21,128,61,0.1) 100%);">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4"><i class="fas fa-info-circle me-2 text-success"></i>How It Works</h4>
                    
                    <div class="timeline">
                        <div class="timeline-item mb-4 pb-3 border-start border-2 border-success ps-4 position-relative">
                            <div class="position-absolute rounded-circle bg-success" style="width: 12px; height: 12px; left: -6px; top: 6px;"></div>
                            <h5 class="fw-bold text-success"><i class="fas fa-plus-circle me-2"></i>Add Your Products</h5>
                            <p class="mb-0">List your farm products with details like category and production date.</p>
                        </div>
                        
                        <div class="timeline-item mb-4 pb-3 border-start border-2 border-success ps-4 position-relative">
                            <div class="position-absolute rounded-circle bg-success" style="width: 12px; height: 12px; left: -6px; top: 6px;"></div>
                            <h5 class="fw-bold text-success"><i class="fas fa-search me-2"></i>Get Discovered</h5>
                            <p class="mb-0">Energy companies browse the platform looking for biomass inputs.</p>
                        </div>
                        
                        <div class="timeline-item border-start border-2 border-success ps-4 position-relative">
                            <div class="position-absolute rounded-circle bg-success" style="width: 12px; height: 12px; left: -6px; top: 6px;"></div>
                            <h5 class="fw-bold text-success"><i class="fas fa-handshake me-2"></i>Make Connections</h5>
                            <p class="mb-0">Connect with energy companies interested in your produce.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (User.IsInRole("Employee"))
{
    <div class="row g-4">
        <div class="col-md-6" style="--animation-order: 1;">
            <div class="card h-100 border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                            <i class="fas fa-industry fa-lg"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">Employee Dashboard</h3>
                            <p class="text-muted mb-0">Discover farm products</p>
                        </div>
                    </div>
                    
                    <p class="mb-4">Find sustainable biomass inputs from local farmers. Browse, filter, and connect with producers to secure the resources your energy company needs.</p>
                    
                    <div class="d-grid gap-3">
                        <a asp-controller="Farmers" asp-action="Index" class="btn btn-outline-success d-flex align-items-center justify-content-between px-4">
                            <span><i class="fas fa-users me-2"></i>View All Farmers</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-success d-flex align-items-center justify-content-between px-4">
                            <span><i class="fas fa-leaf me-2"></i>Browse All Products</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                        <a asp-controller="Farmers" asp-action="Create" class="btn btn-success d-flex align-items-center justify-content-between px-4">
                            <span><i class="fas fa-user-plus me-2"></i>Add New Farmer</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6" style="--animation-order: 2;">
            <div class="card h-100 border-0">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-4"><i class="fas fa-chart-bar me-2 text-success"></i>Platform Statistics</h4>
                    
                    <div class="row g-4 text-center mb-4">
                        <div class="col-4">
                            <div class="px-3 py-4 rounded-4" style="background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(21,128,61,0.1) 100%);">
                                <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 56px; height: 56px;">
                                    <i class="fas fa-users text-success fa-lg"></i>
                                </div>
                                <h2 class="display-6 fw-bold mb-0">@Model.TotalFarmers</h2>
                                <p class="text-muted mb-0">Farmers</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="px-3 py-4 rounded-4" style="background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(21,128,61,0.1) 100%);">
                                <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 56px; height: 56px;">
                                    <i class="fas fa-leaf text-success fa-lg"></i>
                                </div>
                                <h2 class="display-6 fw-bold mb-0">@Model.TotalProducts</h2>
                                <p class="text-muted mb-0">Products</p>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="px-3 py-4 rounded-4" style="background: linear-gradient(135deg, rgba(34,197,94,0.05) 0%, rgba(21,128,61,0.1) 100%);">
                                <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center mx-auto mb-2" style="width: 56px; height: 56px;">
                                    <i class="fas fa-tags text-success fa-lg"></i>
                                </div>
                                <h2 class="display-6 fw-bold mb-0">@Model.CategoryCount</h2>
                                <p class="text-muted mb-0">Categories</p>
                            </div>
                        </div>
                    </div>
                    
                    <h5 class="fw-bold mb-3 pb-2 border-bottom"><i class="fas fa-clock me-2 text-success"></i>Recent Products</h5>
                    
                    @if (Model.RecentProducts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var product in Model.RecentProducts)
                            {
                                <a href="@Url.Action("FarmerProducts", "Products", new { id = product.FarmerId })" 
                                   class="list-group-item list-group-item-action px-0 py-3 border-0 d-flex align-items-center">
                                    <div class="rounded-circle bg-light border border-success text-success d-flex align-items-center justify-content-center me-3" 
                                         style="min-width: 40px; height: 40px; font-size: 16px;">
                                        @(product.FarmerName.Substring(0, 1).ToUpper())
                                    </div>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 text-truncate fw-bold">@product.Name</h6>
                                            <small class="text-muted ms-2">@product.ProductionDate.ToString("MMM dd")</small>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-light text-success border border-success rounded-pill me-2">@product.Category</span>
                                            <small class="text-muted text-truncate">@product.FarmerName</small>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-leaf text-success mb-3" style="font-size: 48px;"></i>
                            <p class="text-muted mb-0">No products available yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
