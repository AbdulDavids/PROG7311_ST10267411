@model PROG7311_POE_ST10267411.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4" style="--animation-order: 0;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="My" class="text-success">My Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card" style="--animation-order: 1;">
                <div class="card-header bg-white" style="border-bottom: 1px solid rgba(0,0,0,.1);">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2 text-success"></i>Edit Product</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FarmerId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 10px;"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Product Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-medium">Category</label>
                            <input asp-for="Category" class="form-control" placeholder="Enter product category" list="categoryOptions" />
                            <datalist id="categoryOptions">
                                <option>Grains</option>
                                <option>Vegetables</option>
                                <option>Fruits</option>
                                <option>Sugar Crops</option>
                                <option>Legumes</option>
                                <option>Biomass</option>
                                <option>Crop Residue</option>
                                <option>Wood Products</option>
                            </datalist>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductionDate" class="form-label fw-medium">Production Date</label>
                            <input asp-for="ProductionDate" type="date" class="form-control" />
                            <span asp-validation-for="ProductionDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="My" class="btn btn-outline-success me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 