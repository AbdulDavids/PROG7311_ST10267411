@model List<PROG7311_POE_ST10267411.ViewModels.ProductDetailsViewModel>

@{
    ViewData["Title"] = "My Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Products</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>Add New Product
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">My Product List</h5>
                </div>
                <div class="col-auto">
                    <span class="badge bg-primary">@Model.Count product@(Model.Count != 1 ? "s" : "")</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>
                                    <span class="badge bg-info">@product.Category</span>
                                </td>
                                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle me-2"></i>You haven't added any products yet. Click the "Add New Product" button to get started.
        </div>
    }

    <div class="mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Tip: What Makes a Good Product Listing?</h5>
            </div>
            <div class="card-body">
                <p>Energy companies are looking for reliable biomass inputs. Here's what makes your products stand out:</p>
                <ul class="mb-0">
                    <li>Be specific about the category (e.g., "Corn Stover" instead of just "Crop Residue")</li>
                    <li>Ensure production dates are accurate to help companies plan their supply chain</li>
                    <li>Use clear, descriptive names that highlight unique qualities of your produce</li>
                </ul>
            </div>
        </div>
    </div>
</div> 