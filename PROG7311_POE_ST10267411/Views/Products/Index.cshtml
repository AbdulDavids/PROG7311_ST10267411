@model PROG7311_POE_ST10267411.ViewModels.ProductFilterViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Products</h1>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filter Products</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-3">
                            <label asp-for="FromDate" class="form-label">From Date</label>
                            <input asp-for="FromDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="ToDate" class="form-label">To Date</label>
                            <input asp-for="ToDate" type="date" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Category" class="form-label">Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="FarmerId" class="form-label">Farmer</label>
                            <select asp-for="FarmerId" class="form-select">
                                <option value="">All Farmers</option>
                                @foreach (var farmer in Model.Farmers)
                                {
                                    <option value="@farmer.Id">@farmer.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 text-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Clear</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Apply Filters
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">All Products</h5>
                </div>
                <div class="col-auto">
                    <span class="badge bg-primary">@Model.Products.Count product@(Model.Products.Count != 1 ? "s" : "")</span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                            <th>Farmer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>
                                    <span class="badge bg-info">@product.Category</span>
                                </td>
                                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-controller="Farmers" asp-action="Details" asp-route-id="@product.FarmerId">@product.FarmerName</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle me-2"></i>No products found matching your criteria. Try adjusting your filters.
        </div>
    }
</div> 