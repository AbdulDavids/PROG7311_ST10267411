@model PROG7311_POE_ST10267411.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="My">My Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Product</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Product</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Are you sure you want to delete this product? This action cannot be undone.
                    </div>

                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Product Details</h5>
                        <div class="row mb-2">
                            <div class="col-md-4 text-muted">Name:</div>
                            <div class="col-md-8 fw-bold">@Model.Name</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4 text-muted">Category:</div>
                            <div class="col-md-8">
                                <span class="badge bg-info">@Model.Category</span>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-4 text-muted">Production Date:</div>
                            <div class="col-md-8">@Model.ProductionDate.ToString("yyyy-MM-dd")</div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="My" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 